@model IEnumerable<PracticalAssignment.Models.BusinessEntity.ProductVM>
@{
    ViewData["Title"] = "Index";
}


<a class="btn btn-outline-success my-3" asp-action="AddProduct"><i class="fa fa-plus"></i> Add Product</a>
<a class="text-center display-4" style="margin-left:25%;">Product Catalog</a>


<table class="table table-striped table-bordered table-responsive-md table-responsive-sm table-responsive-xl ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.ApplicableDiscount)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Status)
            </th>
            <th>Edit Product</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            @Html.HiddenFor(modelItem => product.ProductId)
            <tr>
                <td>
                    <img src="@("~/image/"+product.Photo)" asp-append-version="true" height="100" width="150" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.UnitPrice) <span>&#8377;</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.ApplicableDiscount) <span>&#8377;</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Status)

                </td>
                <td>
                    <a class="btn btn-warning ml-1 col-md-6" asp-route-id="@product.ProductId" asp-controller="Retailer" asp-action="EditProduct">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    if (TempData["ProductAdded"] != null)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Product Added!',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
}

@{
    if (TempData["LoginSuccess"] != null)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Login Successful!',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
}