@model IEnumerable<PracticalAssignment.Models.BusinessEntity.OrderDetailVM>
@{
    ViewData["Title"] = "ShowOrdersForRetailer";
}

<h1 class="text-center display-4">My Selling Orders</h1>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Product.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Total)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => order.OrderId)
                </td>
                <td>
                    <img src="@("~/image/"+order.Product.Photo)" asp-append-version="true" height="100" width="150" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Price) <span>&#8377;</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Discount) <span>&#8377;</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Total)
                </td>
            </tr>
        }
    </tbody>
</table>

