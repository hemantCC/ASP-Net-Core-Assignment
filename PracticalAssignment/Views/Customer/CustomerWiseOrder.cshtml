@model IEnumerable<PracticalAssignment.Models.BusinessEntity.OrderDetailVM>
@{
    ViewData["Title"] = "CustomerWiseOrder";
}

<h1 class="text-center display-4">My Orders</h1>
<table class="table table-striped table-bordered table-responsive-md table-responsive-sm table-responsive-xl ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Product.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Product.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Total)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.OrderId)
                </td>
                <td>
                    <img src="@("~/image/"+product.Product.Photo)" asp-append-version="true" height="100" width="150" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Product.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Total)
                </td>
            </tr>
        }
    </tbody>
</table>
@if (!Model.Any())
{
    <div class="text-center display-3">
        You have no order to see
    </div>
}
@{
    if (TempData["OrderPlaced"] != null)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Order Placed!',
                showConfirmButton: false,
                timer: 1500
            })
        </script>
    }
}